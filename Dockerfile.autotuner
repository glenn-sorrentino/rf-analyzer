# Dockerfile.autotuner
FROM debian:stable-slim

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update -qq && \
    apt-get install -y -qq curl jq bc socat procps ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# nothing else needed â€” Compose will provide the bash loop via `command:`
CMD ["bash", "-lc", "sleep infinity"]
